<%- include('../admin/sidebar.ejs') %> 

<!-- this page responsiveness is completed -->

<section class="registeration-details-section">
    <div class="container">
        <br>
        <br>
        <br>
        <div class="row">
            <div class="col-12">
                <div class="registerationdetails-headline mt-4 d-flex justify-content-center">
                    <h3 class="fs-1">Course Registeration</h3>
                </div>
                <div class="table-body">
                  <table class="table registerationdetail-table mt-5">
                    <thead>
                      <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <th scope="col">Status</th>
                        <th scope="col">Comment</th>
                        <th scope="col"></th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% var i= 1%> 
                      <% RD.forEach((data)=>{%>
                      <tr>
                        <th scope="row"><%= i++ %></th>
                        <td><%= data.name %></td>
                        <td><%= data.email %></td>
                        <!-- <td><%= data.branch %></td> -->

                        <% if(data.status==="Accepted") {%>
                            <td><button class="btn btn-success"><%= data.status %></button></td>
                            <%  } else{%>
                              <td><button class="btn btn-danger"><%= data.status %></button></td>
                              <% } %>
                            <!-- Start Form tag from here-->
                            <form action="/admin/update_status/<%= data._id %>" method="POST">
                            <td><textarea rows="1" name="comment" ></textarea></td>
                            <td>
                              <button name="status" value="Rejected" class="btn btn-danger">Rejected</button>
                              <button name="status" value="Accepted" class="btn btn-success">Accepted</button>
                            </td>
                          </form>

                        <td>
                        	<a href="/admin/viewcoursedetails/<%= data._id %>"><button type="button" class="btn btn-info">View</button></a>
                        	<!-- <a href="#"><button type="button" class="btn">Edit</button></a> -->
                            <a href="#"><button type="button" class="btn btn-danger">Delete</button></a>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
                
            </div>
        </div>
    </div>
</section>

