<%- include('../admin/sidebar.ejs') %> 
<section class="users-details-section">
    <div class="container">
        <br>
        <br>
        <div class="row">
            <div class="col-12">
                <div class="userdetails-headline mt-5 d-flex justify-content-center">
                    <h3 class="fs-1">Registered Users</h3>
                </div>
                
                <table class="table Usersdetail-table mt-5">
                    <thead>
                      <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% var i= 1%> 
                      <% UD.forEach((data)=>{%> 
                      <tr>
                        <th scope="row"><%= i++ %></th>
                        <td><%= data.name %></td>
                        <td><%= data.email %></td>
                        <td>
                        	<a href="/admin/viewusersdetails/<%= data._id %>"><button type="button" class="btn btn-info">View</button></a>
                        	<!-- <a href="#"><button type="button" class="btn">Edit</button></a> -->
                          <a href="#"><button type="button" class="btn btn-danger">Delete</button></a>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>



