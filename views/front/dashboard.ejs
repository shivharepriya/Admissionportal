                </div>
            </div>
        </div><!-- row end-->
    </div><!--container end-->
</section>
<!-------- course section end here --------->


<!------- Profile Modal start here --------->
<div class="modal" tabindex="-1" id="profileModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/profile/<%= id %>" method="post">
                    <div class="profile-form-headline d-flex justify-content-center">
                        <h2 style="color: darkgray;">Change Password</h2>
                    </div>

                    <div class="form-floating course-inputs mb-2 mt-3">
                        <input type="text" name="name" value="<%=username %>" class="form-control" id="floatingInput" placeholder="name" required>
                        <label for="floatingInput">Name</label>
                    </div>

                    <div class="form-floating profileFloating course-inputs mb-2">
                        <input type="email" value="<%=useremail %>" name="email" class="form-control" id="floatingInput" placeholder="email address"
                            required>
                        <label for="floatingInput">Email address</label>
                    </div>

                    <div class="form-floating profileFloating course-inputs mb-2">
                        <input type="text" name="oldpassword" class="form-control" id="floatingPassword" placeholder="Old Password"
                            required>
                        <label for="floatingPassword">Current PW</label>
                    </div>

                    <div class="form-floating profileFloating course-inputs mb-2">
                        <input type="text" name="password" class="form-control" id="floatingPassword" placeholder="New Password"
                            required>
                        <label for="floatingPassword">Update PW</label>
                    </div>

                    <div class="form-floating profileFloating course-inputs mb-2">
                        <input type="text" name="changepassword" class="form-control" id="floatingPassword" placeholder="Re-enter Password"
                            required>
                        <label for="floatingPassword"> Repeat PW</label>
                    </div>

                    <div class="modal-footer d-flex justify-content-center">
                        <button type="submit" class="btn Modals-button">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!------- Profile Modal end here --------->


<!--------- M.tech modal form start here ---------->
<div class="modal" tabindex="-1" id="registerModalOne">
