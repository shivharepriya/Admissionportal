<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Login and Register</title>

	<!-- bootstrap 5 CDN links-->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

	<!-- font awesome CDN link -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

	<!-- custom css files link -->
	<link rel="stylesheet" href="/assets/css/style.css">
	<link rel="stylesheet" href="/assets/css/user.css">

</head>
<body>

<!--------- login form section start here ----------->
<section class="login-register-form-section">
	<div class="container login-form-container">
		<% if(error.length > 0){ %>
			<div class="alert alert-danger bg-transparent border-0">
				<h4 class="text-center"><%= error %></h4>
			</div>
		<% } %>

		<% if(message.length > 0){ %>
			<div class="alert alert-success bg-transparent border-0">
				<h4 class="text-center"><%= message %></h4>
			</div>
		<% } %>
		<div class="row">
			<div class="col-12 d-flex justify-content-center">

				<!---------- form-box ----------->
				<div class="card login-form-box d-inline-flex justify-content-center">
					
					<!----------- login form start ------------>
					<form action="/verify_login" method="post" id="loginForm" class="login-input-group justify-content-center">

						<div class="login-headline d-flex justify-content-center">
							<h2>LOGIN FORM</h2>
						</div>
                        
						<div class="login form-floating mb-3">
                            <!-- <i class="fa-solid fa-envelope"></i> -->
                           <input type="email" name="email" class="form-control" id="floatingInput" placeholder="email address">
                            <label for="floatingInput">Email address</label>
                        </div>

                        <div class="login form-floating">
                        	<!-- <i class="fa-solid fa-eye-slash"></i> -->
                            <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
                            <label for="floatingPassword">Password</label>
                            <button type="button" class="forgot-password">Forgot password?</button>
                        </div>
                         
                        <div class="col-12 login-button mt-5">
                        	<button type="submit" class="btn">Sign In</button>
                        </div> 
                        <div class="extra-div d-flex justify-content-center">
                        	<p>Don't have an Account?</p>
                        	<a href="/registerform"><button type="button" id="signUpButton">Sign Up here</button></a>
                        </div>
                         
						<div class=" col-12 multiple-login d-inline-flex justify-content-center">
							<a href="/auth/google"><i class="fa-brands fa-google"></i></a>
							&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
							<a href="#"><i class="fa-brands fa-facebook"></i></a>
							&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
							<a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
						</div>
					</form>
					<!----------- login form end --------------->	
				</div>
			</div>
		</div>
	</div>
</section>
<!---------login form section end here ----------->


<!-- javascript link -->
<script src="/assets/js/index.js"></script>
</body>
</html>